{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@logic/*": [
        "src/shared/logic/*"
      ],
      "@components/*": [
        "src/shared/components/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.vite.json"
    }
  ]
}
